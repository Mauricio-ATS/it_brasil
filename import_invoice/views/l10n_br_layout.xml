<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="custom_view" model="ir.ui.view">
        <field name="name">l10n_br_layout.document.form.inherit (in Import Invoice)</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="l10n_br_account.invoice_form" />
        <field name="arch" type="xml">
            <page name="amounts" position="after">
                <page name="ii" string="II">
                    <group string="Detalhes do Imposto de Importação">
                        <field name="ii_base_calculo"/>
                        <field name="ii_aliquota"/>
                        <field name="ii_valor_despesas"/>
                        <field name="ii_valor_iof"/>
                        <field name="ii_valor"/>
                    </group>
                    <group string="Declaração de Importação">
                        <field name="import_declaration_ids" colspan="4" nolabel="1" />
                    </group>
                </page>
            </page>
        </field>
    </record>

</odoo>
