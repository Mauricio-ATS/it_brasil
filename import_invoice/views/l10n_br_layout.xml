<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="layout_document_form_inherit" model="ir.ui.view">
        <field name="name">l10n_br_layout.document.form.inherit</field>
        <field name="model">l10n_br_fiscal.document</field>
        <field name="inherit_id" ref="layout_document_form_inherit" />
        <field name="arch" type="xml">
            <page name="amounts" position="inside">
                <page name="ii" string="II" attrs="{'invisible': [('tipo_produto','==', 'service')]}">
                    <group string="Detalhes do Imposto de Importação">
                        <field name="ii_base_calculo"/>
                        <field name="ii_aliquota"/>
                        <field name="ii_valor_despesas"/>
                        <field name="ii_valor_iof"/>
                        <field name="ii_valor"/>
                    </group>
                    <group string="Declaração de Importação">
                        <field name="import_declaration_ids" colspan="4" nolabel="1" />
                    </group>
                </page>
            </page>
        </field>
    </record>

</odoo>
